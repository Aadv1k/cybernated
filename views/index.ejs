      <h2 class="news__title">Latest from TheBlock</h2>
        <ul class="news-feed">
          <% for (const dat of news) {%>
          <% if (dat.source.toLowerCase() === "theblock") {%>
            <li class="feed__itm">
              <div class="feed__img">
                <img src="<%=dat.img%>" alt="<%=dat.title%>">
              </div>
              <a class="
                feed__title"  href="<%= '/post/' + dat.source + '/' + dat.url.split('/').pop() %>"><%=dat.title%></a>
              <a class="feed__more" href="<%= '/post/' + dat.source + '/' + dat.url.split('/').pop() %>">read more</a>
