  <section class="hero">
    <h1 class="hero__title"> <span class="brand">Cybernated</span>: the news feed for everything crypto </h1>
    <form action="" class="reg-form" id="regForm">
      <input id="formInput" type="email"  name="email" class="frm__email" placeholder="Sign up" required>
      <button type="submit" class="frm__submit" id="formBtn"> 
        <span class="btn__text" id="formBtnText">Go</span>
        <span class="btn__loader" id="formBtnLoader"></span>
      </button>
    </form>
